<div class="d-flex justify-content-center mt-5">
    <div style="width: 400px;">
        <div class="text-center"><h2>Edit Message</h2></div>
        <div class="mt-4">
            <%= form_for(:message, url: project_topic_message_path(params[:project_id], params[:topic_id], params[:id]), method: :put) do |f| %>
                <div class="field">
                    <%= f.text_field :message, value: @message.message, class: "form-control", placeholder: "Message" %>
                </div>
                <div class="field mt-2 d-flex justify-content-end">
                    <%= f.submit "Edit", disable_with: 'Editing...', class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>
</div>